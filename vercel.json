{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/(.*)", "dest": "/api" }
  ],
  "crons": [
    {
      "path": "/api/backup/create",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/notifications/send-reminders",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/notifications/weekly-summary",
      "schedule": "0 9 * * 1"
    }
  ]
}
