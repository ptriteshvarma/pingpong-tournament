{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "public",
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(manifest\\.json|favicon\\.svg|service-worker\\.js)", "dest": "/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "crons": [
    {
      "path": "/api/backup/create",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/notifications/send-reminders",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/notifications/weekly-summary",
      "schedule": "0 9 * * 1"
    }
  ]
}
