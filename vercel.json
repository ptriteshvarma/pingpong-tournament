{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/index.js": {
      "includeFiles": "public/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/api" }
  ],
  "crons": [
    {
      "path": "/api/backup/create",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/notifications/send-reminders",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/notifications/weekly-summary",
      "schedule": "0 9 * * 1"
    }
  ]
}
